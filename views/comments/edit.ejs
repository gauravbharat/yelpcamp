<%- include("../partials/header") %>

<!-- <div class="container"> -->
    <div class="row justify-content-md-center">
        <div class="col-md-12">
            <h1 class="text-center">Edit Comment</h1>
            <hr>
            <div class="col-lg-8 mx-auto">      
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                    </div>   
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id %>">Back to Campground</a>
            </div>
        </div>
    </div>            
