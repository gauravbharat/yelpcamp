<%- include("../partials/header") %>

<!-- <div class="container"> -->
    <div class="row justify-content-md-center">
        <div class="col-md-12">
            <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
            <hr>
            <div class="col-lg-8 mx-auto">    
                <form class="form" action="/campgrounds/<%= campground._id %>/comments" method="post">
                    <div class="form-label-group">
                        <input class="form-control" type="text" id="commentText" name="comment[text]" placeholder="Type comment" required>
                        <label for="commentText">Type comment</label>
                    </div>   
                    <div class="form-label-group">
                        <input class="form-control" type="text" id="commentAuthor" name="comment[author]" placeholder="<%= currentUser.username %>" readonly>
                        <label for="commentAuthor">Comment author: <%= currentUser.username %></label>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %>">Back to Campground <strong><%= campground.name %></strong></a>
            </div>        
        </div>
    </div>        
<!-- </div>     -->

<%- include("../partials/footer") %>